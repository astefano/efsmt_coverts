var
	p: parameter;
	xc, hcoolc, hrestc: clock;


automaton controllerh

synclabs: coolc, restc;

loc lc0: while -xc >= -900 wait {}
		 when xc = 900 sync coolc do {xc' = 0, hcoolc' = 0} goto lc1;

loc lc1: while -xc >= -450 wait {}
		 when xc = 450 sync restc do {xc' = 0, hrestc' = 0} goto lc0;

end


var init: region;

init:= loc[controllerh] = lc0
		 & xc = 0 & hcoolc = 0 & hrestc = 0
;