var
		htakefork2, hreleasefork2: clock;


automaton Fork2h

synclabs: takefork2, releasefork2;

loc f20: while True wait {}
		 when True sync takefork2 do {htakefork2' = 0} goto f21;

loc f21: while True wait {}
		 when True sync releasefork2 do {hreleasefork2' = 0} goto f20;

end


var init: region;

init:= loc[Fork2h] = f20
		 & htakefork2 = 0 & hreleasefork2 = 0
;