var
	p, q, r, s, t: parameter;
	x: clock;

automaton C

synclabs: a,b,c;

loc c0: while x <= p wait {}
	when x >= q sync a do {} goto c1;

loc c1: while x <= r wait {}
	when x >= t sync b do {x'=0} goto c2;

loc c2: while x <= q wait {}
	when x >= s sync b do {} goto c0;

end

var init: region;

init:=	loc[C] = c0  &	
	x = 0 
;

