var vr0, vr1, m, M: parameter;

automaton Controller

var hcool, hheat: clock;
	t : analog;

synclabs: cool, heat;
initially ini;

loc lc1: while t <= M wait {t'=6}
	when t = M sync cool do {hcool'=0, t'=t} goto lc2;

loc lc2: while t >= m wait {t'=-2}
	when t = m sync heat do {hheat'=0, t'=t} goto lc1;

end

var init: region;

init:=	loc[Controller] = lc1 & t = 0 & hcool = 0 & hheat = 0 & m = 3 & M = 15
;

